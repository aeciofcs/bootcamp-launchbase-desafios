{% extends "layout.njk" %}

{% block header %}
    <header>
        <div class="links">            
            <a href="/teachers">Teachers</a>
            <a href="/students">Students</a>
            <a href="/">HOME</a>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="card">
        <section 
            class="image" 
            style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <form action="/teachers?_method=PUT" method="POST">

                {% include 'teachers/fields.njk' %}
                <input type="hidden" name="id" value={{teacher.id}}>

            </form>
            <form id="form-delete" action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{teacher.id}}>
                <button type="submit">Deletar</button>
            </form>

        </section>
    </div>
{% endblock %}