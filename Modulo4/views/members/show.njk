{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section 
            class="avatar"
            style="background: url({{membro.avatar_url}}) no-repeat center center / cover">
        </section>
        
        <section class="details">            

            <div class="item">
                <div>Membro</div>
                <div>{{membro.name}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{membro.email}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{membro.birth}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{'Masculino' if membro.gender == 'M' else 'Feminino'}}</div>
            </div>

            <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>{{membro.blood}}</div>
            </div>

            <div class="item">
                <div>Peso (KG)</div>
                <div>{{membro.weight}}</div>
            </div>

            <div class="item">
                <div>Altura (CM)</div>
                <div>{{membro.height}}</div>
            </div>            

            <a href="/membros/{{membro.id}}/edit" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}