{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section 
            class="avatar"
            style="background: url({{Membro.avatar_url}}) no-repeat center center / cover">
        </section>
        
        <section class="details">            

            <div class="item">
                <div>Membro</div>
                <div>{{Membro.name}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{Membro.email}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{Membro.birth}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{'Masculino' if Membro.gender == 'M' else 'Feminino'}}</div>
            </div>

            <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>{{Membro.blood}}</div>
            </div>

            <div class="item">
                <div>Peso (KG)</div>
                <div>{{Membro.weight}}</div>
            </div>

            <div class="item">
                <div>Altura (CM)</div>
                <div>{{Membro.height}}</div>
            </div>            

            <a href="/membros/{{Membro.id}}/edit" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}