{% extends "layout.njk" %}

{% block title %}
    <title>Receita - {{Recipe.title}} </title>
{% endblock %}

{% block logo %}    
    <a href="/"><img src="/assets/logo.png" alt="logo-foody"></a> 
{% endblock %}

{% block menulink %}
<a href="/recipes" class="receitas">Receitas</a>
{% endblock %}

{% block main %}
<main>
    <div class="wrapper-receita">
        <img src="{{Recipe.image}}" alt="">
        <h2>{{Recipe.title}}</h2>
        <h4>{{Recipe.author}}</h4>
    </div>

    <div class="wrapper-ingredientes" id="1">
        <div class="w-span">
            <h2>Ingredientes</h2>
            <span id=1>ESCONDER</span>
        </div>
        <div class="lista-ingredientes">
            <ul>
                {% for ingrediente in Recipe.ingredients %}
                    <li>{{ingrediente}}</li>
                {% endfor %}
            </ul>
        </div>       
    </div>

    <div class="wrapper-preparo" id="2">
        <div class="w-span">
            <h2>Modo de preparo</h2>
            <span id=2>ESCONDER</span>
        </div>
        <div class="lista-ingredientes">
            <ul>
                {% for preparo in Recipe.preparation %}
                    <li>{{preparo}}</li>
                {% endfor %}
            </ul>
        </div>       
    </div>

    <div class="wrapper-informa" id="3">
        <div class="w-span">
            <h2>Informações adicionais</h2>
            <span id=3>ESCONDER</span>
        </div>
        <div class="lista-ingredientes">
            {% if Recipe.information %}
                <p>{{ Recipe.information }}</p>
            {% else %}
                <p>{{ 'Não há informações adicionais para essa receita.' }}</p>                                
            {% endif %}
        </div>       
    </div>

</main>    
{% endblock %}

{% block scripts %}
    <script src="/scripts/scripts.js"></script>
{% endblock %}