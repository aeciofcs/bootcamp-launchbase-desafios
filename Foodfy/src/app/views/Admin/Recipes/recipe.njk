{% extends "layout.njk" %}

{% block title %}
    <title>Receita - {{Recipe.title}} </title>
{% endblock %}

{% block stylesheet  %}
        <link rel="stylesheet" href="/styles/admin.css">
{% endblock %}

{% block header %}    
    <header>
        <div class="header">

        {% block logo %}
            <a href="/admin/recipes"><img src="/assets/Admin/logo.png" alt="logo-admin-foody"></a>
        {% endblock %}

        </div>
    </header>
{% endblock %}

{% block main %}
<main>
    <div class="recipe-1">
        <h2>Receita: {{Recipe.title}}</h2>
        <a href="/admin/recipes/{{Recipe.id}}/edit"><button>Editar receita</button></a>
    </div>
    <div class="recipe-2">
        <img src="{{Recipe.image}}" alt="{{Recipe.title}}">
    </div>
    <div class="recipe-3">
        <h2>{{Recipe.title}}</h2>
        <h5>por {{Recipe.author}}</h5>
    </div>
    <div class="recipe-4">
        <h2>Ingredientes</h2>
        <ul>
            {% for ingredient in Recipe.ingredients %}            
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="recipe-5">
        <h2>Modo de Preparo</h2>
        <ul>
            {% for prepare in Recipe.preparation %}
                <li>{{prepare}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="recipe-6">
        <h2>Informações Adicionais</h2>
        {% if Recipe.information %}
            <p>{{Recipe.information}}</p>
        {% else %}
            <p>{{ 'Não há informações adicionais para essa receita.' }}</p>
        {% endif %}
    </div>

</main>    
{% endblock %}