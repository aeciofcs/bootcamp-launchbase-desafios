{% extends "layout.njk" %}

{% block title %}
        <title>ADMINISTRAÇÃO - FOODFY</title>
{% endblock %}

{% block stylesheet  %}
        <link rel="stylesheet" href="/styles/admin.css">
{% endblock %}

{% block header %}
    
    <header>
        <div class="header">

        {% block logo %}
            <img src="/assets/Admin/logo.png" alt="logo-admin-foody">
        {% endblock %}

        </div>
    </header>

{% endblock %}

{% block main %}
    <main>
        <h2>Gerenciar receitas</h2>
        <div class="wrapper-recipes">
            <div class="recipes">
                {% for recipe in recipes %}
                <div class="recipe" id="1">
                    <section>
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    </section>
                    <section>
                        <h3>{{recipe.title}}</h3>
                        <h4>por {{recipe.author}}</h4>
                        <a href="/admin/recipes/{{ recipes.indexOf(recipe) }}">Visualizar</a>
                    </section>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}

{% block footer %}    
    <footer>
        <h3>Todos direitos reservados, receitas Foodfy.</h3>
    </footer>
{% endblock %}