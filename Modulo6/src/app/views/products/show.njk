{% extends "layout.njk" %}

{% block content %}
<section class="product-single container">

    <div class="gallery">
        <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="" />
    </div>
    <div class="info">
        <h1>{{Product.name}}</h1>

        <div class="published">
            Publicado em {{Product.published.day}} às {{Product.published.hour}}
        </div>

        <div class="description">
            {{Product.description}}
        </div>

        <div class="price-buy">
            <div class="price">
                {{Product.price}}
                {% if Product.price !== Product.old_price %}
                    <span class="old">{{Product.old_price}}</span>
                {% endif %}
            </div>
            <div class="buy">
                {% if Product.status == 0 %}
                    <p class="indisponivel">Indisponível</p>
                {% elseif Product.quantity == 0 %}
                    <p class="indisponivel">Fora de Estoque</p>
                {% else %}
                    <button class="button">Comprar</button>
                {% endif %}
            </div>

        </div>

    </div>

</section>

{% endblock content %}